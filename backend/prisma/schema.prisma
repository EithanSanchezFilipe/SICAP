generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Machine {
  id        Int      @id @default(autoincrement())
  name      String
  location  String
  createdAt DateTime @default(now())
  sensors   Sensor[]
}

model Sensor {
  id        Int      @id @default(autoincrement())
  name      String
  type      String
  machine   Machine  @relation(fields: [machineId], references: [id])
  machineId Int
  createdAt DateTime @default(now())
}
